@model VisiterViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile Ziyaretçi Güncellme</h1>
<br>

<form method="post">
    <input type="hidden" asp-for="visiterID"/>
    <label>Ziyaretçi Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Ziyaretçi Soyadi</label>
    <input type="text" class="form-control" asp-for="Surnane" />
    <br />
    <label>Mail Adresi</label>
    <input type="text" class="form-control" asp-for="Mail" />
    <br />
    <label>Ziyaretçi Şehri</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Ziyaretçi Ükle</label>
    <input type="text" class="form-control" asp-for="Count" />
    <br />
    <button class="btn btn-outline-success">Ziyaretçi Güncelle</button>
</form>
