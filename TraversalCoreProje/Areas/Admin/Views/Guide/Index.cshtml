@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>    
    img{
        border-radius:50%;
    }
</style>
<h1>Rehber Listesi</h1>

<table class="table table-bordered ">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td><image src="@item.Image" height="100px" width="100px" /> </td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>

                @{
                    if (item.Status)
                    {
                    <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a>
                    }
                    else
                    {
                        <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Aktif Yap</a>
                    }
                }
            </td>


            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-success">Düzenle</a></td>

        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi </a>
